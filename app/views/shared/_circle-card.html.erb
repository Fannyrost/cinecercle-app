<%= link_to circle_path(circle) do  %>
  <div class="circle-card b-shadow flex justify-between mb-5">
    <div class="mr-5 flex flex-col items-start justify-between w-2/3">
      <div><h2><i class="fas fa-circle pink-font"></i> <%= circle.name %></h2></div>
      <div></div>
      <div><p>"<%= circle.description %>"</p></div>
    </div>
    <div class="flex flex-col justify-around w-1/3">
      <div class="mr-2"><p><i class="fas fa-users"></i> <%= circle.memberships.count %> membres</p></div>
      <div class="mr-2"><p><i class="fas fa-film"></i> <%= circle.recommendations.count %> films</p></div>

      <% unless circle.recommendations.count == 0 %>
        <div class="mr-2"><p><i class="fas fa-star"></i> <%= circle.recommendations.average(:rating).round(1) %> de moyenne</p></div>
      <% end %>
    </div>
  </div>
<% end %>
